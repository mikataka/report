<div id="mainbody">
  <div id="container">
    <div id="mainbox">
      <div id="mainfield">
	<!-- メインコンテンツ  -->
	<%= form_for([current_user, @repbody]) do |f| %>
	<% if @repbody.errors.any? %>
	<div id="error_explanation">
	  <h2><%= pluralize(@repbody.errors.count, "error") %> prohibited this repbody from being saved:</h2>
	  
	  <ul>
	    <% @repbody.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
	    <% end %>
	  </ul>
	</div>
	<% end %>
	
	<!--  <div class="field">
	      <%= f.label :account %><br />
	      <%= f.number_field :user_id %>
	</div>
	-->
	<%= p @msg %>
	<p>
	  <b>User:</b>
	  <%= @repbody.user.account %>
	</p>
	
	<div class="field">
	  <%= f.label :タグ %>
	  <%= f.collection_select(:tag_id, @tag, :id, :tag, :selected => @repbody.tag_id)%>
	</div>
	
	
	<div class="field">
	  <%= f.label :title %><br />
	  <%= f.text_field :title %>
	</div>
	<div class="field">
	  <%= f.label :body %><br />
	  <%= f.text_area :body %>
	</div>
	<% hidden_field :lock, :lock_version %>
	<div class="actions">
	  <%= f.submit %>
	</div>
	
	<% end %>
	
      </div>
    </div>
    <div id="sidebox">
      <div id="sidemenu">
	<!-- サイドメニュー  -->
	<%= render 'shared/sidemenu-public' %>
      </div>
    </div>
  </div>
</div>


