<p id="notice"><%= notice %></p>

<h1><%= @repbodyidshow.title %></h1>
<!-- さんのレポート提出状況は以下のようになっています.-->
<div id="mainbody">
  <div id="container">
    <div id="mainbox">
      <div id="mainfield">
	<!-- メインコンテンツ  -->
	<p>
	  <b>ユーザ名:</b>
	  <%= @repbodyidshow.user.account %>
	</p>
	
	<p>
	  <b>Tag:</b>
	  <%= @tag.tag %>
	</p>
	
	<p>
	  <b>更新履歴:</b><br>
	  <% @updates.each do |update|%>
	  <%= update.date %>: <%= update.comment %><br>
	  <% end %>
	</p>
	<table width="700px" border="0" cellspacing="1" bgcolor="#c71585">
	  <tr bgcolor="#c71585" align="left">
	    <th>
	      <p>
		<font color="#ffffff">
		  <b>Title:</b>
		  <%= @repbodyidshow.title %>
		</font>
	      </p>
	      
	    </th>
	  </tr>
	  <tr>
	    <td bgcolor="#ffffff">
	      <pre><%=h @repbodyidshow.body -%></pre>
	      <%#=h preautolink(@repbodyidshow.body) -%>
	    </td>
	  </tr>
	</table>
	<% unless @roleh[current_user.role_id.to_i] == '受講生' %>
	<%= link_to 'コメントする', new_user_repbody_comment_path(current_user, @repbodyidshow.id) %></td>
        <% end %>
	
	<h2>コメント</h2>
	
	<% @comments.each do |comment| %>
	<table width="700px" border="0" cellspacing="1" bgcolor="#c71585">
	  <tr bgcolor="#c71585" align="left">
	    <th>
	      <font color="#ffffff">
		<%= p @usernameh["#{comment.user_id}"] %> | <%= comment.updated_at %>
	      </font>
	    </th>
	  </tr>
	  <tr>
	    <td bgcolor="#ffffff">
	      <pre><%= comment.body %></pre>
	    </td>
	  </tr>
	</table>
        <p>--------------------------</p>
	<%# if current_user.id.to_i == repbody.user_id.to_i %>
	<%#= link_to 'Edit', edit_user_repbody_comment_path(current_user, @repbody.id, comment.id) %>
	<%# end %>
	<%#= link_to 'コメント', new_user_repbody_comment_path(current_user, repbody.id) %>
	<% end %>
	<% unless @comments[0] %>
        <p> コメントはまだ何もありません.</p>
	<% end %>
	
	
        <p>
	  このページの URL <br>
	  <%= @urlhere %>
	</p>
</div>
</div>
<div id="sidebox">
  <div id="sidemenu">
    <!-- サイドメニュー  -->
    <%= render 'shared/sidemenu-public' %>
  </div>
</div>
</div>
</div>

